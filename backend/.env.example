NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=tokentradex
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production
JWT_REFRESH_EXPIRE=30d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Trading Configuration
MIN_ORDER_AMOUNT=0.001
MAX_ORDER_AMOUNT=1000000
MAX_ORDER_NOTIONAL_USD=1000000

# Trading Fee Rates (in basis points: 1 bp = 0.01%)
TRADING_FEE_MAKER_BPS=8     # 0.08% maker fee
TRADING_FEE_TAKER_BPS=12    # 0.12% taker fee

# Withdrawal Configuration
MAX_DAILY_WITHDRAWAL_USD=10000
WITHDRAWAL_FEE_PERCENT=0.5
MIN_WITHDRAWAL_FEE_USD=1

# Auto-Fill Configuration (Internal Liquidity)
AUTO_FILL_ENABLED=true
MAX_AUTO_FILL_USD=500
AUTO_FILL_SLIPPAGE_PERCENT=0.5
EXCHANGE_WALLET_EMAIL=exchange@tokentradex.internal
AUTOFILL_TREASURY_STRICT=false

# Async Processing Controls
ASYNC_POST_TRADE=true
REVENUE_QUEUE_MODE=memory
REVENUE_RETRY_MAX=3
REVENUE_RETRY_BACKOFF_MS=500

# Order Idempotency
ORDER_IDEMPOTENCY_ENABLED=true

# Coinbase Developer Platform (CDP) Integration
# Get your API keys from: https://portal.cdp.coinbase.com/projects/api-keys
COINBASE_CDP_KEY_NAME=organizations/{org_id}/apiKeys/{key_id}
COINBASE_CDP_KEY_SECRET=-----BEGIN EC PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END EC PRIVATE KEY-----\n
COINBASE_CDP_NETWORK=base
COINBASE_PROTOCOL_FEE_IS_REVENUE=true

# Smart Contract Integration
CONTRACT_MODE=development    # development|staging|production
CONTRACT_CALL_TIMEOUT_MS=5000
TTX_UNIFIED_ADDRESS=         # Required for production mode
TTX_TOKEN_ADDRESS=           # Required for production mode
ETHEREUM_RPC_URL=            # Required for on-chain calls
PLATFORM_PRIVATE_KEY=        # Required for on-chain calls

# ETH/USD Conversion (for staging)
MOCK_ETH_USD_RATE=2000       # Used in development/staging

# WebSocket Configuration
WS_PORT=3000

# Logging
LOG_LEVEL=info